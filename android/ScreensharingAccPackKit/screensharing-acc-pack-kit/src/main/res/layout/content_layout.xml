<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/screen_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/screnesharing_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screensharing_bar_height"
        android:background="@color/screensharing_bar"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/screensharing_text"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:id="@+id/screensharing_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/close"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

</RelativeLayout>
